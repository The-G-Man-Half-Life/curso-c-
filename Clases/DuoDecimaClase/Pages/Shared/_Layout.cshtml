<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>Veterinary</title>
    <link rel="stylesheet" href="~/DuoDecimaClase.styles.css" asp-append-version="true" />
</head>

<body>
    <header class="d-flex justify-content-between py-3 px-3 border-bottom">
        <a href="/" class="d-flex align-items-center text-decoration-none gap-3">
            <i class="bi bi-hospital fs-1"></i>
            <div class="d-flex flex-column ">
                <h1 class="fs-2 py-0 my-0">Riwi</h1>
                <span class="fs-4 py-0 my-0">Coders</span>
            </div>

        </a>

        <ul class="nav nav-pills d-flex justify-content-center align-items-center">
            <li class="nav-item"><a href="./" class="nav-link active" aria-current="page">Home</a></li>
            <li class="nav-item"><a href="../Create" class="nav-link">Create a person</a></li>
            <li class="nav-item"><a href="../Show" class="nav-link">Show People</a></li>
            <li class="nav-item"><a href="../Find" class="nav-link">Find a person</a></li>
            <li class="nav-item"><a href="../Update" class="nav-link">Update a person</a></li>
            <li class="nav-item"><a href="../Delete" class="nav-link">Delete a person</a></li>
        </ul>
    </header>
    <main role="main" class="">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - DuoDecimaClase - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>